# idea: https://gist.github.com/ctechols/ca1035271ad134841284

setopt LOCAL_OPTIONS
setopt EXTENDED_GLOB

local -A opts
zparseopts -D -A opts -- -ttl:

local dump=${1:-${ZDOTDIR:-$HOME}/.zcompdump}
local ttl=${opts[--ttl]:-86400}

if [[ ! -e $dump || -n ${dump}(#qN.ms+${ttl}) ]]; then
	echo ''
else
  echo '-C'
fi
