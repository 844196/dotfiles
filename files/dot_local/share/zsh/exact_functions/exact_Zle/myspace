# vim: set ft=zsh:

case $BUFFER in
  b)
    BUFFER="git checkout -b $(git config --local user.name)/$(git rev-parse --abbrev-ref HEAD)/"
    CURSOR=${#BUFFER}
    ;;
  bm)
    BUFFER="git branch -m $(git rev-parse --abbrev-ref HEAD)"
    CURSOR=${#BUFFER}
    ;;
  *)
    zle _expand_alias
    zle .self-insert
    ;;
esac
