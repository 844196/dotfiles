# vim: set ft=zsh:

emulate -L zsh
setopt EXTENDED_GLOB

tput cub 9999

local query=${${${LBUFFER##[[:space:]]##}%%[[:space:]]##}// /\\ }
local hid=${${="$(
  anyframe-source-history \
    | anyframe-selector-fzf "${query:+'}$query" \
      --height 9 \
      --no-multi \
      --delimiter 'â”‚ ' \
      --nth 2.. \
      --scheme history
)"}[1]}

if (( hid )); then
  zle vi-fetch-history -n $hid
fi

zle redisplay
