# vim: set ft=zsh:

local -A opthash
zparseopts -D -A opthash -- -wrap

tput cub 9999

local moji=$(
  git moji-list \
    | SHELL==$ZSH_NAME anyframe-selector-fzf '' \
      --no-multi \
      --delimiter 'â”‚' \
      --nth 2.. \
      "$@" \
    | grep -o ':[^:]*:'
)

if [[ -z "$moji" ]]; then
  zle .reset-prompt
  return
fi

local reply=$moji
if [[ -n "${opthash[(i)--wrap]}" ]]; then
  reply="'$moji '"
fi

echo $reply | anyframe-action-insert
zle .reset-prompt
