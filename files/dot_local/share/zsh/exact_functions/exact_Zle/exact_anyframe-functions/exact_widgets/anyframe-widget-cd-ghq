# vim: set ft=zsh:

tput cub 9999

anyframe-source-ghq \
  | SHELL==$ZSH_NAME anyframe-selector-fzf '' \
    --no-multi \
    --scheme path \
    --preview 'ghq list --full-path --exact {} | xargs -I REPO exa -gF --icons --git -la REPO' \
  | xargs -I REPO ghq list --full-path --exact REPO \
  | anyframe-action-execute cd --

zle .reset-prompt
