{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "language": "japanese",
  "env": {
    "CLAUDE_CODE_IDE_SKIP_AUTO_INSTALL": "1",
    "CLAUDE_CODE_SHELL": "zsh",
    "DISABLE_AUTOUPDATER": "1",
    "DISABLE_INSTALLATION_CHECKS": "1",
    "DISABLE_ERROR_REPORTING": "1"
  },
  "permissions": {
    "defaultMode": "acceptEdits",
    "deny": [
      "Read(**/.env)",
      "Read(**/.env.local)",
      "Read(**/.envrc)",
      "Read(**/mise.local.toml)"
    ],
    "ask": [
      "Bash(rm *)",
      "Bash(curl *)",
      "Bash(wget *)",
      "Bash(git checkout *)",
      "Bash(git switch *)",
      "Bash(git branch -d *)",
      "Bash(git branch -D *)",
      "Bash(git branch --delete *)",
      "Bash(git branch -m *)",
      "Bash(git branch -M *)",
      "Bash(git branch --force *)",
      "Bash(git rm *)",
      "Bash(git reset *)",
      "Bash(git clean *)",
      "Bash(git rebase *)",
      "Bash(git push *)",
      "Bash(git pull *)",
      "Bash(git merge *)",
      "Bash(gh pr create *)"
    ],
    "allow": [
      "Write",
      "Edit",
      "Skill(git-commit)",
      "Bash(mkdir *)",
      "Bash(git branch *)",
      "Bash(git status *)",
      "Bash(git log *)",
      "Bash(git show *)",
      "Bash(git grep *)",
      "Bash(git diff *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git fetch *)",
      "Bash(gh pr list *)",
      "Bash(gh pr view *)",
      "Bash(gh issue list *)",
      "Bash(gh issue view *)",
      "Bash(chroma *)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "mise x bun@1.3.8 -- bunx ccstatusline@2.0.25"
  }
}
