{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "language": "japanese",
  "env": {
    "CLAUDE_CODE_IDE_SKIP_AUTO_INSTALL": "1",
    "CLAUDE_CODE_SHELL": "zsh",
    "CLAUDE_CODE_DISABLE_AUTO_MEMORY": "0",
    "DISABLE_AUTOUPDATER": "1",
    "DISABLE_INSTALLATION_CHECKS": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "ENABLE_LSP_TOOL": "true",
    "GIT_PAGER": "cat"
  },
  "permissions": {
    "defaultMode": "acceptEdits",
    "deny": [
      "Read(**/.env)",
      "Read(**/.env.local)",
      "Read(**/.envrc)",
      "Read(**/mise.local.toml)"
    ],
    "ask": [
      "Bash(rm *)",
      "Bash(curl *)",
      "Bash(wget *)",
      "Bash(git checkout *)",
      "Bash(git switch *)",
      "Bash(git branch -d *)",
      "Bash(git branch -D *)",
      "Bash(git branch --delete *)",
      "Bash(git branch -m *)",
      "Bash(git branch -M *)",
      "Bash(git branch --force *)",
      "Bash(git rm *)",
      "Bash(git reset *)",
      "Bash(git clean *)",
      "Bash(git rebase *)",
      "Bash(git push *)",
      "Bash(git pull *)",
      "Bash(git merge *)",
      "Bash(gh pr create *)"
    ],
    "allow": [
      "WebSearch",
      "Write",
      "Edit",
      "Skill(creating-git-commits)",
      "Skill(creating-topic-branches)",
      "Skill(creating-pull-requests)",
      "Skill(writing-agent-context-docs)",
      "Skill(exploring-typescript-code)",
      "Bash(mkdir *)",
      "Bash(git branch *)",
      "Bash(git status *)",
      "Bash(git log *)",
      "Bash(git show *)",
      "Bash(git grep *)",
      "Bash(git diff *)",
      "Bash(git create-topic-branch *)",
      "Bash(git log-topic-branch)",
      "Bash(git diff-topic-branch)",
      "Bash(git base-branch)",
      "Bash(git base-branch-remote)",
      "Bash(git base-commit-long)",
      "Bash(git base-commit)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git fetch *)",
      "Bash(gh pr list *)",
      "Bash(gh pr view *)",
      "Bash(gh issue list *)",
      "Bash(gh issue view *)",
      "Bash(chroma *)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "mise x bun@1.3.8 -- bunx --bun ccstatusline@2.0.25"
  },
  "enabledPlugins": {
    "typescript-lsp@claude-plugins-official": true
  }
}
