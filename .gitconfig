[user]
  name = Masaya Takeda
  email = 844196@gmail.com
[core]
  editor = code --wait
  quotepath = false
  autoCRLF = false
  ignorecase = false
  excludesfile = ~/.gitignore
[alias]
  graph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --color=always
[color]
  ui = auto
[rebase]
  autoSquash = true
  autoStash = true
[status]
  showUntrackedFiles = all
[commit]
  verbose = true
[diff]
  indentHeuristic = true
[ghq]
  root = ~/.ghq
[credential]
  helper = "!f() { ~/.local/bin/git-credential-manager $*; }; f"
