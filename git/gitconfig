	name = Masaya Takeda
	email = 844196@gmail.com
[core]
	editor = vim
	excludesfile = ~/dotfiles/git/gitignore_global
	quotepath = false
    pager = "diff-so-fancy | less --tabs=4 -RFX"
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[url "git@github.com:"]
    pushinsteadof = "https://github.com/"
    pushinsteadof = "git://github.com/"
[alias]
    graph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    logg = log --stat --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    sync = !git fetch && git merge
    suspend = !git add -A && git stash
    resume = stash pop
    unstage = reset
    changelog = log --pretty=format:'* %s' --reverse master..HEAD
    today = !git log --author=`git config user.name` --since=midnight --branches --no-merges --oneline --reverse --pretty=format:'%h\t%s' | awk -F $'\t' '!colname[$2]++{print $1, $2}'
    count = diff master..HEAD --stat
[color]
    ui = auto
[rebase]
    autoSquash = true
    autoStash = true
[status]
    showUntrackedFiles = all
[commit]
    verbose = true
[diff]
    indentHeuristic = true
[diff-so-fancy]
    markEmptyLines = false
